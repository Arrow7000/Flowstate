.splash {
    // height: 100%;
    height: 100vh;
    // width: 100%;
    width: 100vw;
    background-color: #181818;
    z-index: 10;
    position: fixed;
    top: 0;
    left: 0;
    opacity: .8;
    transition: opacity 1s, z-index 2s;
    -webkit-transition: opacity 1s, z-index 2s;
    text-align: center;
    color: #fff;
    font-family: 'Playfair Display', sans-serif;
    font-size: 4em;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow-x: hidden;
    // overflow-y: scroll;
    a {
        color: alpha(textCol, 0.9);
    }
    &.splash-on-false {
        opacity: 0;
        z-index: -10;
    }
    &.splash-faq {
        display: block;
        position: absolute;
        // padding: 0 250px;
        // font-size: 0.5em;
        .faq-question {
            margin-top: 75px;
        }
    }
    .splash-faq-holder {
        width: 750px;
        margin: 0 auto;
        .faq-body {
            font-size: 0.4em;
            // padding-top: 10px;
            padding-bottom: 100px;
            .faq-q {
                font-size: 1.1em;
                margin-top: 100px;
            }
            .faq-a {
                font-size: 0.75em;
                text-align: left;
            }
        }
    }
    .faq-close {
        position: fixed;
        right: 50px;
        top: 50px;
        // 
        width: 50px;
        height: 50px;
        transform: rotate(45deg);
        cursor pointer;
        transition: transform .5s;
        -webkit-transition: transform .5s;
        transform-origin: center center;
        &:hover {
            transform: rotate(225deg);
        }
        .x-line {
            background-color: white;
            width: 5px;
            height: 100%;
            margin: 0 22.5px; // Margin should be: (container-width - child-width) / 2
            position: absolute;
        }
        .x-vert {}
        .x-hor {
            transform: rotate(90deg);
        }
    }
    &>.splash-holder {
        width: 60vw;
        // height: 70vh
        margin: auto;
        padding-bottom: 100px;
        &>.title {
            margin: 0 auto;
            font-size: 1.4em;
            text-align: center;
            padding-bottom: 60px;
            cursor: context-menu;
        }
        &>.selectors {
            width: 100%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: center;
            .selector {
                // margin: auto;
                // width: 49%;
                font-size: 0.5em;
                // display: inline-block;
                flex-basis: 30%;
                .select-list-item {
                    text-transform: capitalize;
                    .mins-label {
                        text-transform: none;
                    }
                    cursor: pointer;
                    color: alpha( textCol, 0.5);
                    &:hover {
                        color: alpha( textCol, 0.75);
                    }
                    &.chosen-true {
                        color: textCol;
                    }
                    &#font-lustria {
                        font-family: 'Lustria', serif;
                    }
                    &#font-inconsolata {
                        font-family: 'Inconsolata', sans-serif;
                    }
                    &#font-lato {
                        font-family: 'Lato', sans-serif;
                    }
                }
            }
        }
        .enter-button {
            margin-top: 100px;
            font-size: 0.5em;
            .enter-button-inner {
                cursor: pointer;
                color: alpha(textCol, 0.75);
                &:hover {
                    color: textCol;
                }
            }
        }
    }
    .messages {
        position: fixed;
        bottom: 50px;
        display: block;
        left: 0;
        right: 0;
        text-align: center;
        font-size: 0.25em;
        opacity: 0;
        transition: opacity 0.5s;
        &.show-message-true {
            opacity: 1;
        }
    }
}

.faq-button {
    position: fixed;
    right: 50px;
    bottom: 50px;
    z-index: 12;
    font-size: 1em;
    cursor: pointer;
    color: alpha(textCol, 0.6);
    opacity 1;
    transition: opacity 1s;
    font-family: 'Playfair Display', sans-serif;
    animation: glow 2.75s infinite;
    text-shadow: 0px 0px 0px alpha(textCol, 0.75);
    &:hover {
        color: alpha(textCol, 0.75);
        text-shadow: 0px 0px 5px alpha(textCol, 0.75);
    }
    &.faq-on-true {
        color: textCol;
        // color: alpha(textCol, 1);
        text-shadow: 0px 0px 8px alpha(textCol, 0.75);
    }
    &.show-false {
        opacity: 0;
    }
}

@keyframes glow {
    50% {
        text-shadow: 0px 0px 25px alpha(textCol, 0.75);
        color: alpha(textCol, 1);
    }
}

.container {
    color: textCol;
    height: 100%;
    height: 100vh;
    width: 100%;
    width: 100vw;
    padding: 100px 20%;
    font-size: 110%;
    outline: none;
    display: inline-block;
    z-index: 0;
    position: absolute;
    overflow-x: hidden;
    top: 0;
    left: 0;
    &:empty:before {
        // content: "Start writing...";
        display: block;
        /* For Firefox */
        color: alpha(textCol, .5);
        opacity: 1;
    }
    &>br {
        margin-bottom: 15px;
    }
}

