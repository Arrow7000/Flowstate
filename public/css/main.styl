/* ==========================================================================
   Author's custom styles
   ========================================================================== */

bgrCol=#303;
textCol=#f8f8f8;
// 
*,
*:before,
*:after {
    box-sizing: border-box;
}

body {
    font-family: 'Lustria', 'Poppins', serif;
    &.font-lustria {
        // font-family: 'Lustria', serif;
    }
    &.font-inconsolata {
        font-family: 'Inconsolata', sans-serif;
    }
    &.font-lato {
        font-family: 'Lato', sans-serif;
    }
    background-color: bgrCol;
}

.splash {
    height: 100%;
    height: 100vh;
    width: 100%;
    width: 100vw;
    background-color: #181818;
    z-index: 1;
    position: fixed;
    top: 0;
    left: 0;
    opacity: .8;
    transition: opacity 1s;
    -webkit-transition: opacity 1s, z-index 2s;
    text-align: center;
    color: #fff;
    font-family: 'Playfair Display', sans-serif;
    font-size: 4em;
    display: flex;
    &.splash-on-false {
        opacity: 0;
        z-index: -1;
    }
    &>.splash-holder {
        width: 60vw;
        // height: 70vh
        margin: auto;
        padding-bottom: 100px;
        &>.title {
            margin: 0 auto;
            font-size: 1.4em;
            text-align: center;
            padding-bottom: 60px;
        }
        &>.selectors {
            width: 100%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: center;
            .selector {
                // margin: auto;
                // width: 49%;
                font-size: 0.5em;
                // display: inline-block;
                flex-basis: 30%;
                .select-list-item {
                    text-transform: capitalize;
                    .mins-label {
                        text-transform: none;
                    }
                    cursor: pointer;
                    color: alpha( textCol, 0.5);
                    &:hover {
                        color: alpha( textCol, 0.75);
                    }
                    &.chosen-true {
                        color: textCol;
                    }
                }
            }
        }
        .enter-button {
            margin-top: 100px;
            font-size: 0.5em;
            cursor: pointer;
            color: alpha(textCol, 0.75);
            &:hover {
                color: textCol;
            }
        }
    }
}

.container {
    color: textCol;
    height: 100%;
    height: 100vh;
    width: 100%;
    width: 100vw;
    padding: 100px 20%;
    font-size: 110%;
    outline: none;
    display: inline-block;
    z-index: 0;
    position: absolute;
    overflow-x: hidden;
    top: 0;
    left: 0;
    &:empty:before {
        // content: "Start writing...";
        display: block;
        /* For Firefox */
        color: alpha(textCol, .5);
        opacity: 1;
    }
    &>br {
        margin-bottom: 15px;
    }
}

.show-text {
    position: fixed;
    top: 50px;
    left: 50px;
    color: textCol;
    z-index: 1;
}

.timer {
    position: fixed;
    top: 50px;
    right: 50px;
    color: textCol;
    z-index: 0;
}

.del-timer {
    position: fixed;
    bottom: 50px;
    left: 50px;
    color: textCol;
    z-index: 0;
}


